generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type RecipeRating {
  average  Float
  quantity BigInt
}

type RecipeRecipeItems {
  amount       String
  ingredientId String
}

type RecipeSteps {
  descriptions String[]
  imageUrl     String
  title        String
}

model Ingredient {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  image String
  kcal  Float
  name  String
  type  String
}

model Recipe {
  id          String              @id @default(auto()) @map("_id") @db.ObjectId
  image       String
  kcal        Float
  name        String
  rating      RecipeRating
  recipeItems RecipeRecipeItems[]
  steps       RecipeSteps[]
}
