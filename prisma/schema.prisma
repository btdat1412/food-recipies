generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type RecipeRating {
  average  Float
  quantity Int
}

type RecipeItems {
  amount       String
  ingredientId String
}

type RecipeSteps {
  descriptions String[]
  imageUrl     String
  title        String
}

model Ingredient {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  image String @default("https://via.placeholder.com/400")
  kcal  Float  @default(0)
  name  String
  type  String @default("other")
}

model Recipe {
  id          String              @id @default(auto()) @map("_id") @db.ObjectId
  image       String              @default("https://via.placeholder.com/400")
  kcal        Float               @default(0)
  name        String
  difficulty  String
  healthy     String
  time        String              
  rating      RecipeRating
  recipeItems RecipeItems[]
  steps       RecipeSteps[]
}
