// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Ingredient {
  id          String             @id @default(auto()) @map("_id") @db.ObjectId
  image       String
  name        String
  kcal        Float
  type        String
}

model Recipe {
  id          String             @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  image       String
  kcal        Float
  recipeItems RecipeIngredient[]
  rating      Rating
  steps       Step[]
}

type RecipeIngredient {
  ingredientId String
  amount       String
}

type Rating {
  quantity Int
  average  Float
}

type Step {
  title        String
  imageUrl     String
  descriptions String[]
}
